#!/bin/bash

CLYDE_TMP=clyde-tmp
PACKAGE="$2"
SUDO=doas

if [[ "${1-}" =~ ^-*h(elp)?$ ]]; then
	echo 'Usage: '
	echo "install [PACKAGE]: Installs a package"
	echo "yeet [PACKAGE]: Removes a package"
	exit
fi

cd ~
if [ "$1" = "install" ]
then
	URL=https://aur.archlinux.org/$PACKAGE.git
	OPTION="n"

	# Check if package exists
	if curl -s --request GET "https://aur.archlinux.org/rpc/?v=5&type=info&arg[]=$PACKAGE" | grep '"resultcount":0' > /dev/null
	then
	       echo "Package ${PACKAGE} not found"
	       exit
	else
		mkdir -p $CLYDE_TMP/$CHROOT
		cd $CLYDE_TMP
		read -p "Install ${PACKAGE}? [y/N]: " $OPTION
		if [[ "{$OPTION}" == "n" || "{$OPTION}" == "N" ]]
		then
			echo "Canceled by the user! Exiting..."
			rm -rf $CLYDE_TMP # Should be fine since there's no chroot yet
			exit
		fi
		git clone $URL # clone
		cd $PACKAGE
		
		$EDITOR ~/$CLYDE_TMP/$PACKAGE/PKGBUILD
		makepkg -si
		cd ~
		rm -rf $CLYDE_TMP

		# Clean up
		echo "Cleaning up..."
	fi
fi

if [ "$1" = "yeet" ]
then 
	$SUDO pacman -Rn $PACKAGE
fi
